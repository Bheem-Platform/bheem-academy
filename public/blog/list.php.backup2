        /* Banner Image - Neural Design System */
        .insights-banner {
            width: 100%;
            margin: 0 0 48px 0;
            padding: 40px 48px;
            overflow: hidden;
            border-radius: 16px;
            /* Neural gradient matching homepage */
            background: linear-gradient(135deg, #8B5CF6 0%, #A855F7 25%, #EC4899 50%, #F472B6 75%, #EC4899 100%);
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 48px;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            box-shadow:
                0 10px 40px rgba(139, 92, 246, 0.3),
                0 4px 15px rgba(236, 72, 153, 0.2);
        }

        /* Animated gradient overlay */
        .insights-banner::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(
                135deg,
                rgba(139, 92, 246, 0.1) 0%,
                rgba(236, 72, 153, 0.1) 50%,
                rgba(6, 182, 212, 0.1) 100%
            );
            opacity: 0;
            transition: opacity 0.4s ease;
            pointer-events: none;
        }

        .insights-banner:hover {
            transform: translateY(-4px);
            box-shadow:
                0 20px 60px rgba(139, 92, 246, 0.4),
                0 8px 25px rgba(236, 72, 153, 0.3);
        }

        .insights-banner:hover::before {
            opacity: 1;
        }

