{{!
    @template theme_edoo/cloned_drawers

    Cloned drawers template.
    This template is identical to the original drawers template but allows for independent customization.

    Context variables required for this template:
    * sitename - The name of the site
    * output - The core renderer for the page
    * bodyattributes - attributes for the body tag as a string of html attributes
    * sidepreblocks - HTML for the blocks
    * hasblocks - true if there are blocks on this page
    * courseindexopen - true if the course index should be open on page load
    * blockdraweropen - true if the block drawer should be open on page load
    * courseindex - course index
    * primarymoremenu - HTML for the primary more menu
    * secondarymoremenu - HTML for the secondary more menu
    * mobileprimarynav - HTML for the mobile primary nav
    * usermenu - HTML for the user menu
    * langmenu - HTML for the language menu
    * forceblockdraweropen - true if the block drawer should be forced open
    * addblockbutton - HTML for the add block button
}}
{{{ output.doctype }}}
<html {{{ output.htmlattributes }}}>
<head>
    <title>{{{ output.page_title }}}</title>
    <link rel="shortcut icon" href="{{{ output.favicon }}}" />
    {{{ output.standard_head_html }}}
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Cloned Homepage Identifier -->
    <meta name="homepage-type" content="cloned">
    <style>
        /* Custom styles for cloned homepage */
        .cloned-homepage-banner {
            border-left: 4px solid #007bff;
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        }
        .cloned-homepage-footer {
            border-top: 2px solid #dee2e6;
            background: #f8f9fa;
        }
        .cloned-homepage-layout .navbar {
            border-bottom: 2px solid #007bff;
        }
        .cloned-homepage-layout .navbar-brand::after {
            content: " (CLONE)";
            font-size: 0.7em;
            color: #007bff;
            font-weight: bold;
        }
    </style>
</head>

<body {{{ bodyattributes }}}>
{{{ output.standard_top_of_body_html }}}

<div id="page-wrapper" class="d-print-block">

    {{{ output.full_header }}}

    {{#courseindex}}
    <div id="theme_boost-drawers-courseindex" class="d-print-none">
        <div class="drawer drawer-left {{#courseindexopen}}show{{/courseindexopen}}" data-region="fixed-drawer" id="theme_boost-drawers-courseindex" data-preference="drawer-open-index" data-state="show-drawer-left" data-forceopen="{{#forceblockdraweropen}}1{{/forceblockdraweropen}}" data-close-on-resize="1">
            <div class="drawer-toggler drawer-left-toggle ms-auto d-xl-none">
                <button
                    class="btn icon-no-margin"
                    data-toggler="drawers"
                    data-action="closedrawer"
                    data-target="theme_boost-drawers-courseindex"
                    data-toggle="tooltip"
                    data-placement="right"
                    title="{{#str}}closecourseindex, core{{/str}}"
                >
                    <span class="sr-only">{{#str}}closecourseindex, core{{/str}}</span>
                    {{#pix}} t/expanded, core {{/pix}}
                </button>
            </div>
            <div class="drawer-content drag-container" data-usertour="scroller">
                {{{ courseindex }}}
            </div>
        </div>
    </div>
    {{/courseindex}}

    {{#hasblocks}}
    <div id="theme_boost-drawers-blocks" class="d-print-none">
        <div class="drawer drawer-right {{#blockdraweropen}}show{{/blockdraweropen}}" data-region="fixed-drawer" id="theme_boost-drawers-blocks" data-preference="drawer-open-block" data-state="show-drawer-right" data-forceopen="{{#forceblockdraweropen}}1{{/forceblockdraweropen}}" data-close-on-resize="1">
            <div class="drawer-toggler drawer-right-toggle me-auto d-xl-none">
                <button
                    class="btn icon-no-margin"
                    data-toggler="drawers"
                    data-action="closedrawer"
                    data-target="theme_boost-drawers-blocks"
                    data-toggle="tooltip"
                    data-placement="right"
                    title="{{#str}}closeblockdrawer, core{{/str}}"
                >
                    <span class="sr-only">{{#str}}closeblockdrawer, core{{/str}}</span>
                    {{#pix}} t/expanded, core {{/pix}}
                </button>
            </div>
            <div class="drawer-content" data-usertour="scroller">
                <section class="d-print-none" aria-label="{{#str}}blocks{{/str}}">
                    {{{ addblockbutton }}}
                    {{{ sidepreblocks }}}
                </section>
            </div>
        </div>
    </div>
    {{/hasblocks}}

    <div id="page" data-region="mainpage" data-usertour="scroller" class="drawers drag-container">
        <div id="topofscroll" class="main-inner">
            <div class="drawer-toggles d-flex">
                {{#courseindex}}
                <div class="drawer-toggler drawer-left-toggle open-nav d-print-none">
                    <button
                        class="btn icon-no-margin"
                        data-toggler="drawers"
                        data-action="toggle"
                        data-target="theme_boost-drawers-courseindex"
                        data-targetpreference="drawer-open-index"
                        data-toggle="tooltip"
                        data-placement="right"
                        title="{{#str}}opendrawerindex, core{{/str}}"
                    >
                        <span class="sr-only">{{#str}}opendrawerindex, core{{/str}}</span>
                        <span class="dir-rtl-hide">{{#pix}}i/menuleft, core{{/pix}}</span>
                        <span class="dir-ltr-hide">{{#pix}}i/menuright, core{{/pix}}</span>
                    </button>
                </div>
                {{/courseindex}}
                {{#hasblocks}}
                <div class="drawer-toggler drawer-right-toggle ms-auto d-xl-none d-print-none">
                    <button
                        class="btn icon-no-margin"
                        data-toggler="drawers"
                        data-action="toggle"
                        data-target="theme_boost-drawers-blocks"
                        data-targetpreference="drawer-open-block"
                        data-toggle="tooltip"
                        data-placement="right"
                        title="{{#str}}opendrawerblocks, core{{/str}}"
                    >
                        <span class="sr-only">{{#str}}opendrawerblocks, core{{/str}}</span>
                        <span class="dir-rtl-hide">{{#pix}}i/menuright, core{{/pix}}</span>
                        <span class="dir-ltr-hide">{{#pix}}i/menuleft, core{{/pix}}</span>
                    </button>
                </div>
                {{/hasblocks}}
            </div>
            {{{ output.full_header }}}
            {{> core/secondary_navigation }}
            <div id="page-content" class="pb-3 d-print-block">
                <div id="region-main-box">
                    <section id="region-main" aria-label="{{#str}}content{{/str}}">

                        {{#hasregionmainsettingsmenu}}
                        <div class="region_main_settings_menu_proxy"></div>
                        {{/hasregionmainsettingsmenu}}
                        {{{ output.course_content_header }}}
                        {{#headercontent}}
                            {{> core/activity_header }}
                        {{/headercontent}}
                        {{{ output.main_content }}}
                        {{{ output.activity_navigation }}}
                        {{{ output.course_content_footer }}}

                    </section>
                    {{#hasblocks}}
                    <section data-region="blocks-column" class="hidden-print d-print-none d-xl-flex" aria-label="{{#str}}blocks{{/str}}">
                        {{{ addblockbutton }}}
                        {{{ sidepreblocks }}}
                    </section>
                    {{/hasblocks}}
                </div>
            </div>
        </div>
    </div>
    {{#hasregionmainsettingsmenu}}
        <div data-region="drawer" class="hidden" aria-hidden="true">
            {{{ regionmainsettingsmenu }}}
        </div>
    {{/hasregionmainsettingsmenu}}
</div>

{{{ output.standard_after_main_region_html }}}
{{{ output.standard_end_of_body_html }}}
</body>
</html>
{{#js}}
M.util.js_pending('theme_boost/loader');
M.util.js_pending('theme_edoo/drawers');
require(['theme_boost/loader', 'theme_boost/drawers'], function(Loader, Drawers) {
    Drawers.init();
    M.util.js_complete('theme_edoo/drawers');
    M.util.js_complete('theme_boost/loader');
});
{{/js}}