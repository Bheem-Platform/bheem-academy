        <script>
        (function() {
            const canvas = document.getElementById('nodeTreeCanvas');
            const svg = document.getElementById('connectionsSvg');
            const nodes = document.querySelectorAll('.draggable-node');

            let draggedNode = null;
            let offset = { x: 0, y: 0 };

            // Connection map (from node -> to node) - Updated for 8 nodes
            const connections = [
                { from: 1, to: 4 }, { from: 1, to: 5 }, { from: 1, to: 6 },
                { from: 2, to: 4 }, { from: 2, to: 5 }, { from: 2, to: 6 },
                { from: 3, to: 4 }, { from: 3, to: 5 }, { from: 3, to: 6 },
                { from: 4, to: 7 }, { from: 4, to: 8 },
                { from: 5, to: 7 }, { from: 5, to: 8 },
                { from: 6, to: 7 }, { from: 6, to: 8 }
            ];

            // Initialize node positions
            function initNodes() {
                nodes.forEach(node => {
                    const x = parseInt(node.dataset.x);
                    const y = parseInt(node.dataset.y);
                    node.style.left = x + 'px';
                    node.style.top = y + 'px';
                    node.style.position = 'absolute';
                });
                drawConnections();
            }

            // Draw all connections
            function drawConnections() {
                const canvasRect = canvas.getBoundingClientRect();
                let pathsHTML = '';

                connections.forEach(conn => {
                    const fromNode = document.querySelector(`[data-node-id="${conn.from}"]`);
                    const toNode = document.querySelector(`[data-node-id="${conn.to}"]`);

                    if (fromNode && toNode) {
                        const fromRect = fromNode.getBoundingClientRect();
                        const toRect = toNode.getBoundingClientRect();

                        const x1 = fromRect.left - canvasRect.left + fromRect.width / 2;
                        const y1 = fromRect.top - canvasRect.top + fromRect.height;
                        const x2 = toRect.left - canvasRect.left + toRect.width / 2;
                        const y2 = toRect.top - canvasRect.top;

                        const midY = (y1 + y2) / 2;
                        pathsHTML += `<path class="connection-line" d="M ${x1},${y1} Q ${x1},${midY} ${(x1+x2)/2},${midY} T ${x2},${y2}" />`;
                    }
                });

                svg.innerHTML = pathsHTML;
            }

            // Drag handlers
            nodes.forEach(node => {
                node.addEventListener('mousedown', startDrag);
                node.addEventListener('touchstart', startDrag);
            });

            function startDrag(e) {
                draggedNode = e.currentTarget;
                const rect = draggedNode.getBoundingClientRect();
                const clientX = e.type.includes('touch') ? e.touches[0].clientX : e.clientX;
                const clientY = e.type.includes('touch') ? e.touches[0].clientY : e.clientY;

                offset.x = clientX - rect.left;
                offset.y = clientY - rect.top;

                draggedNode.style.zIndex = '1000';
                draggedNode.style.cursor = 'grabbing';

                document.addEventListener('mousemove', drag);
                document.addEventListener('touchmove', drag);
                document.addEventListener('mouseup', stopDrag);
                document.addEventListener('touchend', stopDrag);

                e.preventDefault();
            }

            function drag(e) {
                if (!draggedNode) return;

                const canvasRect = canvas.getBoundingClientRect();
                const clientX = e.type.includes('touch') ? e.touches[0].clientX : e.clientX;
                const clientY = e.type.includes('touch') ? e.touches[0].clientY : e.clientY;

                let x = clientX - canvasRect.left - offset.x;
                let y = clientY - canvasRect.top - offset.y;

                // Boundaries
                x = Math.max(0, Math.min(x, canvasRect.width - draggedNode.offsetWidth));
                y = Math.max(0, Math.min(y, canvasRect.height - draggedNode.offsetHeight));

                draggedNode.style.left = x + 'px';
                draggedNode.style.top = y + 'px';
                draggedNode.dataset.x = x;
                draggedNode.dataset.y = y;

                drawConnections();
            }

            function stopDrag() {
                if (draggedNode) {
                    draggedNode.style.zIndex = '';
                    draggedNode.style.cursor = 'grab';
                    draggedNode = null;
                }
                document.removeEventListener('mousemove', drag);
                document.removeEventListener('touchmove', drag);
                document.removeEventListener('mouseup', stopDrag);
                document.removeEventListener('touchend', stopDrag);
            }

            // Initialize on load
            initNodes();
            window.addEventListener('resize', drawConnections);
        })();
        </script>

