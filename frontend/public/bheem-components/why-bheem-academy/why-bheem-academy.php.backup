<style>
    /* Why Bheem Academy - Premium Modern Design with Professional Gradients */
    .why-bheem-academy {
        padding: 60px 0 40px;
        /* Ultra-Modern Mesh Gradient - 2024 Design Trend */
        background:
            linear-gradient(135deg,
                #667eea 0%,
                #764ba2 25%,
                #f093fb 50%,
                #4facfe 75%,
                #00f2fe 100%);
        position: relative;
        overflow: hidden;
    }

    /* Animated Gradient Pulse Overlay - Glass Morphism Effect */
    .why-bheem-academy::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background:
            radial-gradient(circle at 25% 25%, rgba(255, 255, 255, 0.15) 0%, transparent 40%),
            radial-gradient(circle at 75% 75%, rgba(102, 126, 234, 0.2) 0%, transparent 40%),
            radial-gradient(circle at 50% 50%, rgba(240, 147, 251, 0.15) 0%, transparent 50%);
        animation: gradientPulse 10s ease-in-out infinite;
        pointer-events: none;
        z-index: 0;
    }

    @keyframes gradientPulse {
        0%, 100% {
            opacity: 1;
            transform: scale(1);
        }
        50% {
            opacity: 0.7;
            transform: scale(1.05);
        }
    }

    /* Remove mesh grid and particles */
    .why-bheem-academy::after {
        display: none;
    }

    .why-bheem-academy .why-bheem-container::before {
        display: none;
    }

    .why-bheem-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 30px;
        position: relative;
        z-index: 2;
    }

    /* Header Section */
    .why-bheem-header {
        text-align: center;
        margin-bottom: 30px;
        animation: fadeInUp 1s ease-out;
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(40px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .why-bheem-badge {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 12px 28px;
        background: rgba(255, 255, 255, 0.2);
        border: 2px solid rgba(255, 255, 255, 0.3);
        border-radius: 100px;
        color: #ffffff;
        font-size: 15px;
        font-weight: 700;
        margin-bottom: 24px;
        box-shadow:
            0 4px 20px rgba(0, 0, 0, 0.15),
            inset 0 1px 0 rgba(255, 255, 255, 0.3);
        backdrop-filter: blur(12px);
    }

    .why-bheem-badge i {
        font-size: 20px;
        color: #ffffff;
        filter: drop-shadow(0 2px 8px rgba(255, 255, 255, 0.4));
    }

    .why-bheem-title {
        font-size: clamp(2.5rem, 5vw, 4rem);
        font-weight: 900;
        margin: 0 0 12px 0;
        line-height: 1.1;
        letter-spacing: -0.03em;
    }

    .why-bheem-title .highlight {
        color: #ffffff;
        position: relative;
        display: inline-block;
        filter: drop-shadow(0 4px 16px rgba(255, 255, 255, 0.4));
    }

    .why-bheem-title .white-text {
        color: #ffffff;
    }

    .why-bheem-subtitle {
        font-size: clamp(1.25rem, 2vw, 1.75rem);
        font-weight: 700;
        color: #ffffff;
        margin: 0 0 16px 0;
        letter-spacing: -0.02em;
    }

    .why-bheem-subtitle .accent {
        color: #ffffff;
        font-weight: 800;
    }

    .why-bheem-description {
        font-size: clamp(1rem, 1.5vw, 1.15rem);
        color: rgba(255, 255, 255, 0.95);
        max-width: 800px;
        margin: 0 auto;
        line-height: 1.7;
    }

    /* Interactive N8N Canvas */
    .why-bheem-features {
        position: relative;
        margin-top: 40px;
        min-height: 480px;
        background: transparent;
        padding: 0;
        overflow: visible;
    }

    .features-tree-container {
        position: relative;
        width: 100%;
        height: 100%;
        min-height: 480px;
    }

    /* SVG Connection Lines */
    .tree-connections {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: 1;
    }

    .connection-line {
        stroke: rgba(139, 92, 246, 0.4);
        stroke-width: 2.5;
        fill: none;
        stroke-dasharray: 8, 4;
        animation: dash-flow 25s linear infinite, pulse-glow 3s ease-in-out infinite;
        transition: all 0.3s ease;
        filter: drop-shadow(0 0 4px rgba(139, 92, 246, 0.3));
    }

    @keyframes dash-flow {
        to {
            stroke-dashoffset: -100;
        }
    }

    @keyframes pulse-glow {
        0%, 100% {
            stroke: rgba(139, 92, 246, 0.4);
            filter: drop-shadow(0 0 4px rgba(139, 92, 246, 0.3));
        }
        50% {
            stroke: rgba(139, 92, 246, 0.7);
            filter: drop-shadow(0 0 8px rgba(139, 92, 246, 0.6));
        }
    }

    .connection-line:hover {
        stroke: rgba(139, 92, 246, 0.8);
        stroke-width: 3;
    }

    /* Compact Draggable Node Cards - Modern Animated Glass Background */
    .draggable-node {
        position: absolute;
        background:
            linear-gradient(135deg,
                rgba(255, 255, 255, 0.95) 0%,
                rgba(240, 147, 251, 0.08) 50%,
                rgba(255, 255, 255, 0.95) 100%);
        backdrop-filter: blur(20px) saturate(180%);
        -webkit-backdrop-filter: blur(20px) saturate(180%);
        border: 2px solid rgba(255, 255, 255, 0.5);
        border-radius: 16px;
        padding: 8px 6px;
        width: 80px;
        min-height: 95px;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow:
            0 12px 40px rgba(102, 126, 234, 0.25),
            0 6px 20px rgba(240, 147, 251, 0.15),
            inset 0 2px 6px rgba(255, 255, 255, 0.8),
            0 0 30px rgba(79, 172, 254, 0.15);
        cursor: grab;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        z-index: 10;
        user-select: none;
        position: relative;
        overflow: hidden;
        animation: glass-shine 8s ease-in-out infinite;
    }

    @keyframes glass-shine {
        0%, 100% {
            background:
                linear-gradient(135deg,
                    rgba(255, 255, 255, 0.95) 0%,
                    rgba(240, 147, 251, 0.08) 50%,
                    rgba(255, 255, 255, 0.95) 100%);
            border-color: rgba(255, 255, 255, 0.5);
            box-shadow:
                0 12px 40px rgba(102, 126, 234, 0.25),
                0 6px 20px rgba(240, 147, 251, 0.15),
                inset 0 2px 6px rgba(255, 255, 255, 0.8),
                0 0 30px rgba(79, 172, 254, 0.15);
        }
        50% {
            background:
                linear-gradient(135deg,
                    rgba(255, 255, 255, 0.98) 0%,
                    rgba(79, 172, 254, 0.1) 50%,
                    rgba(255, 255, 255, 0.98) 100%);
            border-color: rgba(255, 255, 255, 0.7);
            box-shadow:
                0 16px 50px rgba(102, 126, 234, 0.3),
                0 8px 25px rgba(240, 147, 251, 0.2),
                inset 0 2px 8px rgba(255, 255, 255, 0.9),
                0 0 40px rgba(79, 172, 254, 0.2);
        }
    }

    /* Animated Shimmer Effect - Modern Glass */
    .draggable-node::after {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: linear-gradient(
            45deg,
            transparent 30%,
            rgba(255, 255, 255, 0.4) 48%,
            rgba(79, 172, 254, 0.25) 50%,
            rgba(255, 255, 255, 0.4) 52%,
            transparent 70%
        );
        animation: shimmer-rotate 10s linear infinite;
        pointer-events: none;
    }

    @keyframes shimmer-rotate {
        0% {
            transform: rotate(0deg);
        }
        100% {
            transform: rotate(360deg);
        }
    }

    /* Aquarium Fish Swimming Animations - Each node moves differently */
    @keyframes swim1 {
        0%, 100% {
            transform: translate(0, 0) rotate(0deg);
        }
        25% {
            transform: translate(15px, -20px) rotate(3deg);
        }
        50% {
            transform: translate(-10px, -15px) rotate(-2deg);
        }
        75% {
            transform: translate(20px, 10px) rotate(4deg);
        }
    }

    @keyframes swim2 {
        0%, 100% {
            transform: translate(0, 0) rotate(0deg);
        }
        30% {
            transform: translate(-25px, 15px) rotate(-4deg);
        }
        60% {
            transform: translate(10px, -25px) rotate(2deg);
        }
        90% {
            transform: translate(-15px, 5px) rotate(-3deg);
        }
    }

    @keyframes swim3 {
        0%, 100% {
            transform: translate(0, 0) rotate(0deg);
        }
        20% {
            transform: translate(20px, 20px) rotate(5deg);
        }
        55% {
            transform: translate(-20px, -10px) rotate(-3deg);
        }
        80% {
            transform: translate(15px, -15px) rotate(2deg);
        }
    }

    @keyframes swim4 {
        0%, 100% {
            transform: translate(0, 0) rotate(0deg);
        }
        35% {
            transform: translate(-15px, -25px) rotate(-5deg);
        }
        65% {
            transform: translate(25px, 15px) rotate(4deg);
        }
        85% {
            transform: translate(-10px, 20px) rotate(-2deg);
        }
    }

    @keyframes swim5 {
        0%, 100% {
            transform: translate(0, 0) rotate(0deg);
        }
        40% {
            transform: translate(18px, -18px) rotate(3deg);
        }
        70% {
            transform: translate(-22px, 12px) rotate(-4deg);
        }
        95% {
            transform: translate(12px, 22px) rotate(2deg);
        }
    }

    @keyframes swim6 {
        0%, 100% {
            transform: translate(0, 0) rotate(0deg);
        }
        25% {
            transform: translate(-18px, 18px) rotate(-3deg);
        }
        60% {
            transform: translate(22px, -12px) rotate(5deg);
        }
        85% {
            transform: translate(-12px, -20px) rotate(-2deg);
        }
    }

    @keyframes swim7 {
        0%, 100% {
            transform: translate(0, 0) rotate(0deg);
        }
        30% {
            transform: translate(25px, -22px) rotate(4deg);
        }
        65% {
            transform: translate(-15px, 18px) rotate(-5deg);
        }
        90% {
            transform: translate(10px, -10px) rotate(3deg);
        }
    }

    @keyframes swim8 {
        0%, 100% {
            transform: translate(0, 0) rotate(0deg);
        }
        35% {
            transform: translate(-20px, -20px) rotate(-4deg);
        }
        68% {
            transform: translate(18px, 15px) rotate(3deg);
        }
        92% {
            transform: translate(-10px, 8px) rotate(-2deg);
        }
    }

    /* Apply different animations to each node like fish swimming */
    .draggable-node[data-node-id="1"] {
        animation: swim1 8s ease-in-out infinite;
    }
    .draggable-node[data-node-id="2"] {
        animation: swim2 10s ease-in-out infinite;
    }
    .draggable-node[data-node-id="3"] {
        animation: swim3 9s ease-in-out infinite;
    }
    .draggable-node[data-node-id="4"] {
        animation: swim4 11s ease-in-out infinite;
    }
    .draggable-node[data-node-id="5"] {
        animation: swim5 7.5s ease-in-out infinite;
    }
    .draggable-node[data-node-id="6"] {
        animation: swim6 9.5s ease-in-out infinite;
    }
    .draggable-node[data-node-id="7"] {
        animation: swim7 8.5s ease-in-out infinite;
    }
    .draggable-node[data-node-id="8"] {
        animation: swim8 9.8s ease-in-out infinite;
    }

    .draggable-node:active {
        cursor: grabbing;
        box-shadow:
            0 8px 24px rgba(139, 92, 246, 0.2),
            0 4px 12px rgba(139, 92, 246, 0.12),
            inset 0 1px 0 rgba(255, 255, 255, 1);
    }

    .feature-card {
        position: relative;
        width: 60px;
        min-height: 70px;
        padding: 5px 3px;
    }

    .feature-card .feature-icon {
        width: 32px;
        height: 32px;
        margin-bottom: 4px;
    }

    .feature-card .feature-title {
        font-size: 0.58rem;
        margin: 0 0 2px 0;
        line-height: 1.05;
    }

    .feature-card .feature-description {
        font-size: 0.48rem;
        line-height: 1.15;
    }

    /* Compact Node Connectors */
    .node-connector {
        position: absolute;
        width: 8px;
        height: 8px;
        border-radius: 50%;
        background: linear-gradient(135deg, #A855F7, #8B5CF6);
        border: 2px solid white;
        box-shadow: 0 0 8px rgba(139, 92, 246, 0.5);
        z-index: 20;
        transition: all 0.3s ease;
    }

    .node-connector:hover {
        transform: scale(1.4);
        box-shadow: 0 0 16px rgba(139, 92, 246, 0.8);
    }

    .node-input {
        top: -4px;
        left: 50%;
        transform: translateX(-50%);
    }

    .node-output {
        bottom: -4px;
        left: 50%;
        transform: translateX(-50%);
    }

    @keyframes node-pulse {
        0%, 100% {
            box-shadow: 0 0 8px rgba(139, 92, 246, 0.5);
        }
        50% {
            box-shadow: 0 0 14px rgba(139, 92, 246, 0.9);
        }
    }

    .node-connector {
        animation: node-pulse 2s ease-in-out infinite;
    }

    /* Hover effects - Enhanced Glow */
    .draggable-node::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        border-radius: 16px;
        background: linear-gradient(135deg,
            rgba(255, 255, 255, 0.2) 0%,
            rgba(255, 255, 255, 0.1) 100%);
        opacity: 0;
        transition: opacity 0.4s ease;
        pointer-events: none;
        z-index: 1;
    }

    .draggable-node:hover::before {
        opacity: 1;
    }

    .draggable-node:hover {
        transform: translateY(-6px) scale(1.08);
        border-color: rgba(255, 255, 255, 0.8);
        box-shadow:
            0 20px 60px rgba(102, 126, 234, 0.35),
            0 10px 30px rgba(240, 147, 251, 0.25),
            inset 0 3px 8px rgba(255, 255, 255, 1),
            0 0 50px rgba(79, 172, 254, 0.3);
        background:
            linear-gradient(135deg,
                rgba(255, 255, 255, 0.98) 0%,
                rgba(255, 255, 255, 0.95) 50%,
                rgba(255, 255, 255, 0.98) 100%);
    }

    /* Professional Icon Styling with Glass Background */
    .feature-icon {
        width: 48px;
        height: 48px;
        background: rgba(255, 255, 255, 0.4);
        border: 2px solid rgba(255, 255, 255, 0.6);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 6px;
        position: relative;
        transition: all 0.3s ease;
        z-index: 2;
        backdrop-filter: blur(10px);
        box-shadow:
            0 4px 12px rgba(102, 126, 234, 0.15),
            inset 0 2px 4px rgba(255, 255, 255, 0.8);
    }

    .feature-icon img {
        width: 90%;
        height: 90%;
        object-fit: contain;
        transition: all 0.3s ease;
        filter: drop-shadow(0 3px 6px rgba(0, 0, 0, 0.25));
    }

    .draggable-node:hover .feature-icon {
        transform: scale(1.15);
        background: rgba(255, 255, 255, 0.35);
        border-color: rgba(255, 255, 255, 0.6);
        box-shadow:
            0 6px 18px rgba(0, 0, 0, 0.25),
            inset 0 1px 2px rgba(255, 255, 255, 0.5),
            0 0 20px rgba(255, 255, 255, 0.3);
    }

    .draggable-node:hover .feature-icon img {
        transform: scale(1.05);
        filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.3)) brightness(1.1);
    }

    .feature-title {
        font-size: 0.75rem;
        font-weight: 800;
        color: #1E293B;
        margin: 0 0 3px 0;
        letter-spacing: -0.01em;
        position: relative;
        z-index: 2;
        line-height: 1.15;
        text-shadow: 0 2px 4px rgba(255, 255, 255, 0.9);
    }

    .feature-description {
        font-size: 0.6rem;
        color: #475569;
        line-height: 1.25;
        margin: 0;
        position: relative;
        z-index: 2;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-shadow: 0 1px 3px rgba(255, 255, 255, 0.7);
    }

    /* CTA Section */
    .why-bheem-cta {
        text-align: center;
        margin-top: 60px;
        animation: fadeInUp 1s ease-out 0.4s backwards;
    }

    .why-bheem-cta-button {
        display: inline-flex;
        align-items: center;
        gap: 14px;
        padding: 20px 48px;
        background: linear-gradient(135deg, #A855F7 0%, #EC4899 50%, #F97316 100%);
        color: #FFFFFF;
        text-decoration: none;
        border-radius: 100px;
        font-weight: 800;
        font-size: 18px;
        letter-spacing: -0.01em;
        box-shadow:
            0 16px 48px rgba(168, 85, 247, 0.6),
            0 8px 24px rgba(236, 72, 153, 0.4),
            inset 0 2px 0 rgba(255, 255, 255, 0.3);
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
        border: 2px solid rgba(255, 255, 255, 0.2);
    }

    /* Shimmer effect */
    .why-bheem-cta-button::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(
            90deg,
            transparent,
            rgba(255, 255, 255, 0.4),
            transparent
        );
        transition: left 0.7s ease;
    }

    .why-bheem-cta-button:hover::before {
        left: 100%;
    }

    .why-bheem-cta-button:hover {
        transform: translateY(-4px) scale(1.05);
        box-shadow:
            0 24px 72px rgba(168, 85, 247, 0.8),
            0 12px 36px rgba(236, 72, 153, 0.6),
            inset 0 2px 0 rgba(255, 255, 255, 0.5);
        border-color: rgba(255, 255, 255, 0.4);
        background: linear-gradient(135deg, #EC4899 0%, #F97316 50%, #A855F7 100%);
    }

    .why-bheem-cta-button:active {
        transform: translateY(-2px) scale(1.02);
    }

    .why-bheem-cta-button i {
        font-size: 22px;
        filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.3));
        transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .why-bheem-cta-button:hover i {
        transform: translateX(6px);
    }

    /* Ripple effect */
    .why-bheem-cta-button::after {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        width: 0;
        height: 0;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.5);
        transform: translate(-50%, -50%);
        transition: width 0.6s, height 0.6s;
    }

    .why-bheem-cta-button:active::after {
        width: 400px;
        height: 400px;
    }

    /* Stats Bar - Premium Modern Design */
    .why-bheem-stats {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 2px;
        margin-top: 70px;
        max-width: 900px;
        margin-left: auto;
        margin-right: auto;
        animation: fadeInUp 1s ease-out 0.5s backwards;
        position: relative;
        background: linear-gradient(135deg,
            rgba(168, 85, 247, 0.15),
            rgba(236, 72, 153, 0.12),
            rgba(99, 102, 241, 0.15));
        padding: 2px;
        border-radius: 24px;
    }

    .stat-item {
        text-align: center;
        padding: 40px 32px;
        background: linear-gradient(135deg,
            rgba(255, 255, 255, 0.95) 0%,
            rgba(255, 255, 255, 0.9) 100%);
        backdrop-filter: blur(20px);
        position: relative;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        overflow: hidden;
    }

    .stat-item:first-child {
        border-radius: 22px 0 0 22px;
    }

    .stat-item:last-child {
        border-radius: 0 22px 22px 0;
    }

    /* Individual stat backgrounds */
    .stat-item:nth-child(1) {
        background: linear-gradient(135deg,
            rgba(168, 85, 247, 0.05) 0%,
            rgba(255, 255, 255, 0.95) 100%);
    }

    .stat-item:nth-child(2) {
        background: linear-gradient(135deg,
            rgba(236, 72, 153, 0.05) 0%,
            rgba(255, 255, 255, 0.95) 100%);
    }

    .stat-item:nth-child(3) {
        background: linear-gradient(135deg,
            rgba(99, 102, 241, 0.05) 0%,
            rgba(255, 255, 255, 0.95) 100%);
    }

    .stat-item::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg,
            rgba(168, 85, 247, 0.1),
            rgba(236, 72, 153, 0.08));
        opacity: 0;
        transition: opacity 0.4s ease;
    }

    .stat-item:hover::before {
        opacity: 1;
    }

    .stat-item:hover {
        transform: translateY(-8px) scale(1.05);
        box-shadow:
            0 20px 50px rgba(168, 85, 247, 0.2),
            0 10px 25px rgba(236, 72, 153, 0.15);
    }

    .stat-value {
        font-size: clamp(2.5rem, 4vw, 3.5rem);
        font-weight: 900;
        display: block;
        line-height: 1;
        margin-bottom: 12px;
        position: relative;
        z-index: 1;
    }

    /* Individual stat value colors */
    .stat-item:nth-child(1) .stat-value {
        background: linear-gradient(135deg, #A855F7, #9333EA);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        filter: drop-shadow(0 4px 12px rgba(168, 85, 247, 0.3));
    }

    .stat-item:nth-child(2) .stat-value {
        background: linear-gradient(135deg, #EC4899, #DB2777);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        filter: drop-shadow(0 4px 12px rgba(236, 72, 153, 0.3));
    }

    .stat-item:nth-child(3) .stat-value {
        background: linear-gradient(135deg, #6366F1, #4F46E5);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
