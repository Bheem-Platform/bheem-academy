                                src="https://www.instagram.com/reel/DO0yZIjAcYA/embed/captioned"
                                frameborder="0"
                                scrolling="no"
                                allowtransparency="true"
                                allowfullscreen="true">
                            </iframe>
                        </div>
                    </div>

                    <!-- Slides 5-25 removed to keep only first 4 slides -->
                    <!-- Slide 5 removed -->
                    <div class="instagram-reel-slide">
                        <div class="instagram-reel-embed">
                            <div class="instagram-reel-loading"></div>
                            <iframe
                                src="https://www.instagram.com/reel/DOnqe7ak5um/embed/captioned"
                                frameborder="0"
